<vbox width="100%" height="100%">
    <menubar width="100%">
        <menu text="File">
            <menuitem id="ID_NEWMAP" text="New" shortcutText="Ctrl+N"/>
            <menuitem id="ID_OPENMAP" text="Open" shortcutText="Ctrl+O"/>
            <menuitem id="ID_SAVEMAP" text="Save" shortcutText="Ctrl+S"/>
            <menuitem id="ID_SAVEASMAP" text="Save as" shortcutText="Ctrl+Shift+S"/>
        </menu>   
    </menubar> 
    <button-bar selectedIndex="1" direction="vertical" horizontalAlign="right">
        <button id="ID_SELECTTOOL" width="50" icon="data/editor/map/tool_select.png" />
        <button id="ID_PAINTTOOL" width="50" icon="data/editor/map/tool_paint.png" />
        <button id="ID_ERASETOOL" width="50" icon="data/editor/map/tool_erase.png" />
    </button-bar>
</vbox>